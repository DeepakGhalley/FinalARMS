@using CORE_BOL
@model LogoSignMapModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Letter Head Uploads</a></li>
                    <li class="breadcrumb-item active">Logo Sign Map</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Update Logo Sign Map</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Edit" method="post" enctype="multipart/form-data">
        @*data-ajax="true" data-ajax-method="post">*@
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="LogoSignMapId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Logo Name<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-3">
                    <select asp-for="LogoId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.LogoUploadId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="LogoId" id="logoid" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">EsSign Upload<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-3">
                    <select asp-for="ESSignId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.EsSignUploadId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="LogoId" id="essignid" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">DcdSign Upload<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-3">
                    <select asp-for="DCDSignId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.DcdSignUploadId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="LogoId" id="dcdsignid" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="custom-control custom-checkbox">
                    &nbsp;&nbsp;<input class="custom-control-input" type="checkbox" asp-for="IsActive" checked>
                    <label for="IsActive" class="custom-control-label">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" onclick="return saveme();">Save</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
        <!-- /.card-body -->

    </form>
</div>
<script>
    function saveme() {
        //VALIDATION FOR LOGO UPLOAD
        if ($('#LogoId option:selected').val() == 0) {
            $('#logoid').html('Please Select a Value!');
            $('#LogoId').focus();
            return false;
        }
        else {
            $('#logoid').html('');
        }

        //VALIDATION FOR ESSIGN UPLOAD
        if ($('#ESSignId option:selected').val() == 0) {
            $('#essignid').html('Please Select a Value!');
            $('#ESSignId').focus();
            return false;
        }
        else {
            $('#essignid').html('');
        }

        //VALIDATION FOR DCDSIGN UPLOAD
        if ($('#DCDSignId option:selected').val() == 0) {
            $('#dcdsignid').html('Please Select a Value!');
            $('#DCDSignId').focus();
            return false;
        }
        else {
            $('#dcdsignid').html('');
        }
    }

</script>

