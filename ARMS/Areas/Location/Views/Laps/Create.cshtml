@using CORE_BOL
@model LapModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dialog-background" style="display:none" id="img">
    <div class="dialog-loading-wrapper">
        <span class="dialog-loading-icon"><img src="~/dist/img/loader.gif" style="width: 100px; height: 100px;" /></span>
    </div>
</div>


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Lap</a></li>
                    <li class="breadcrumb-item active">Create Lap</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<form class="form-horizontal" asp-action="Create" method="post">

    <div class="card card-info">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                <p>@TempData["msg"]</p>
            </div>
        }
        <div class="card-header">
            <h3 class="card-title">Create Lap</h3>
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Lap Name<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-5">
                    <input asp-for="LapName" id="LapNameId" class="form-control" type="text" placeholder="Name" required/>
                    <span id="errorLapNameId" asp-validation-for="LapName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Lap Description<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-5">
                    <textarea asp-for="LapDescription" id="LapDescriptionId" class="form-control" rows="3" placeholder="Lap Description"></textarea>
                    <span id="errorLapDescriptionId" asp-validation-for="LapDescription" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="custom-control custom-checkbox">
                &nbsp;&nbsp; <input class="custom-control-input" type="checkbox" asp-for="IsActive" checked>
                <label for="IsActive" class="custom-control-label">
                    @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" onclick="return saveme();">Save</button>
                <button type="reset" id="btnCancel" class="btn btn-warning">Cancel</button>

            </div>

        </div>
    </div>
    @*</div>*@
</form>

<script>

    function saveme() {
        if ($('#LapNameId').val() == "") {
            $('#errorLapNameId').html('Please Enter a Lap Name');
            $('#LapNameId').focus();
            return false;
        }
        else {
            $('#errorLapNameId').html('');
        }


        if ($('#LapDescriptionId').val() == "") {
            $('#errorLapDescriptionId').html('Please Enter the lap Description');
            $('#LapDescriptionId').focus();
            return false;
        }
        else {
            $('#errorLapDescriptionId').html('');
        }

    }


</script>