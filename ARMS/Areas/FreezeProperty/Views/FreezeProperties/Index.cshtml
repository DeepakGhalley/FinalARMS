@using CORE_BOL
@model FreezePropertyVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="dialog-background" style="display:none" id="img">
    <div class="dialog-loading-wrapper">
        <span class="dialog-loading-icon"><img src="~/dist/img/loader.gif" style="width: 100px; height: 100px;" /></span>
    </div>
</div>


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">FreezeProperty</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-check"></i> Success!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">FreezeProperty</h3>
    </div>
    <div class="card-body">
        <div class="text-danger"></div>
        <div class="form-group row">
            <div class="input-group d-flex justify-content-center col-5">
                <label class="col-sm-4 col-form-label">Plot No:</label>
                <input id="PlotNoInput" class="form-control col-6" />
            </div>
            <div class="input-group d-flex justify-content-center col-5">
                <label class="col-sm-4 col-form-label">Thram No:</label>
                <input id="ThramNoInput" class="form-control col-6" />
            </div>
            <div class="input-group-append col-2">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <button class="btn btn-primary" onclick="return SearchDetails();">Search</button>
            </div>
        </div>
    </div>
</div>

<!--Details-->
<div class="card card-info" id="tbl_fproperty" style="display: none;">
    <div class="card-header">
        <h3 class="card-title">Details</h3>
    </div>

    <div class="card-body">
        <input type="hidden" id="hdnLandDetailId" />
        <table id="example1" class="table table-bordered table-striped">
            <thead style="background-color:mediumaquamarine">

                <tr>
                    <th>Sl No</th>
                    <th>CID</th>
                    <th>TTIN</th>
                    <th>Plot No</th>
                    <th>Thram No</th>
                    <th>Owner</th>
                    <th>Tax Payer</th>
                    <th>Land Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tbl_body">
            </tbody>
        </table>
        <br />
        <div class="form-group row">
            <button class="btn btn-warning" onclick="return Cancel();">Cancel</button>
        </div>
    </div>
</div>

<!--Freeze Property-->
<div class="card card-info" id="tbl_fpDeatails" style="display: none;">
    <div class="card-header">
        <h3 class="card-title">Freeze Property</h3>
    </div>
    <div class="card-body">
        <input class="form-control" hidden id="IDLandDetail" />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Letter No:</label>
            <div class="col-sm-4">
                <input class="form-control" id="IDLetterno" />
                <span id="errorIDLetterno" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Letter Date:</label>
            <div class="col-sm-4">
                <input type="date" id="IDLetterdate" class="form-control" required/>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Remarks:</label>
            <div class="col-sm-4">
                <input class="form-control" id="IDRemarks" required/>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Is Freeze:</label>
            <div class="col-sm-4">
                <input class="" type="checkbox" id="IDisFreeze">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" onclick=" Save();">Save</button>
                <button type="reset" class="btn btn-warning" onclick=" Cancel1();">Cancel</button>
            </div>
        </div>

    </div>
</div>



<script>

    function Cancel() {
            $('#tbl_fproperty').hide(1000);
            $('#tbl_fpDeatails').hide(1000);
    }
    function Cancel1() {
        $('#tbl_fpDeatails').hide(1000);
    }

    function SearchDetails() {
            if ($('#PlotNoInput').val() == "" && $('#ThramNoInput').val() == "") {
                swal('Empty Fields', 'Please Enter Valid Plot No or Thram No', 'error');
                $('#PlotNoInput').focus();
                $('#ThramNoInput').focus();
                return false;
            }

            var PlotNo = $('#PlotNoInput').val();
            var ThramNo = $('#ThramNoInput').val();

            $.ajax({
                type: "GET",
                url: '@Url.Action("SearchDetails", "FreezeProperties")',
                data: {
                    plotno: PlotNo,
                    thramno: ThramNo
                },
                dataType: "json",
                success: function (data) {
                    $('#tbl_body').empty();
                    if (data.length > 0) {
                        $.each(data, function (key, value) {
                            $('#tbl_fproperty').show(1000);

                            $('#tbl_body').append(
                                '<tr>'
                                + '<td>' + (key + 1) + '</td>'
                                + '<td>' + value.cid + '</td>'
                                + '<td>' + value.ttin + '</td>'
                                + '<td>' + value.plotNo + '</td>'
                                + '<td>' + value.thramNo + '</td>'
                                + '<td>' + value.landOwnerShip + '</td>'
                                + '<td>' + value.fname + ' ' + value.mname + ' ' + value.lname + '</td>'
                                + '<td>' + value.landType + '</td>'
                                + '<td><b><a style="cursor: pointer; color: forestgreen;" title="Select" onclick="return showDetails(' + value.landDetailId + ');">Select</a></b></td>'
                                + '</tr>');
                        });
                    } else {
                        $('#tbl_body').append(
                            '<tr><td colspan="4" style="color: red;">No record found!</td></tr>');
                        swal({
                            title: 'Please Enter valid Value!',
                            type: 'error',
                            confirmButtonText: 'OK'
                        });
                    }

                },

            });

    }
    //*****end of SearchDetails*****

    function showDetails(landDetailId) {
        $('#tbl_fpDeatails').show(1000);
        $('#IDLandDetail').val(landDetailId);
    }

    function Save() {

        if ($("#IDLetterno").val() == "") {
            swal("Enter Letter No.", "Empty Field", "error");
            return false;
        }

        if ($("#IDLetterdate").val() == "") {
            swal("Enter Letter Date", "Empty Field", "error");
            return false;
        }

        if ($("#IDRemarks").val() == "") {
            swal("Enter Remarks", "Empty Field", "error");
            return false;
        }
        
        var myarray = [];
        var FreezePropertyVM = {};

        FreezePropertyVM.LandDetailId = parseInt($("#IDLandDetail").val());
        FreezePropertyVM.LetterNo = $("#IDLetterno").val();
        FreezePropertyVM.LetterDate = $("#IDLetterdate").val();
        FreezePropertyVM.Remarks = $("#IDRemarks").val();
        FreezePropertyVM.IsFreeze = Boolean($("#IDisFreeze").val());


        myarray.push(FreezePropertyVM);
        var json_data = JSON.stringify(myarray);
        //console.log(json_data);
        //alert(json_data);
        $('#img').show();

        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveDetails", "FreezeProperties")',
            data: json_data,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                $('#img').hide();
                //swal("Success");
                swal({
                    title: 'Success',
                    type: 'success',
                    showConfirmButton: false,
                })
                setTimeout(function () {
                    location.reload();
                }, 1500);

            },
            failure: function (response) {
                $('#img').hide();
                swal("Creation Failed");
            },
            error: function (response) {
                $('#img').hide();
                swal("Error while inserting");
            }
        });
    }


</script>

