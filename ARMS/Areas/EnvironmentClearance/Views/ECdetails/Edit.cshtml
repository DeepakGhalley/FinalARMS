@using CORE_BOL
@model ECDetailModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">EC Detail</a></li>
                    <li class="breadcrumb-item active">Update EC Detail</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Update EC Detail</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Edit" method="post">
        @*data-ajax="true" data-ajax-method="post">*@
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="EcDetailId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ApplicantId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="ApplicantId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.ApplicantId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="ApplicantId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EcActivityTypeId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="EcActivityTypeId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.ActivityTypeId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="EcActivityTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IndustryTypeId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="IndustryTypeId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.IndustryTypeId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="IndustryTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ProjectName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ProjectName" class="form-control" placeholder="Project Name" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="StartDate" type="date" class="form-control" placeholder="Start Date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="EndDate" type="date" class="form-control" placeholder="End Date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ProjectStatusId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="ProjectStatusId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.ProjectStatusId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="ProjectStatusId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ProjectClosedBy" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ProjectClosedBy" class="form-control" placeholder="Project Closed By" />
                    <span asp-validation-for="ProjectClosedBy" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ProjectCloseDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="ProjectCloseDate" type="date" class="form-control" placeholder="Project closed Date" />
                    <span asp-validation-for="ProjectCloseDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ProjectCloseRemarks" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ProjectCloseRemarks" class="form-control" placeholder="Project Closed Remarks" />
                    <span asp-validation-for="ProjectCloseRemarks" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApprovalStatusId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="ApprovalStatusId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.ApprovalStatusId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="ApprovalStatusId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApprovalOn" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="ApprovalOn" type="date" class="form-control" placeholder="Approval On" />
                    <span asp-validation-for="ApprovalOn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApprovedBy" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ApprovedBy" class="form-control" placeholder="ApprovedBy" />
                    <span asp-validation-for="ApprovedBy" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApprovalRemarks" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ApprovalRemarks" class="form-control" placeholder="Approval Remarks" />
                    <span asp-validation-for="ApprovalRemarks" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="InitialAmount" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="InitialAmount" class="form-control" placeholder="Initial Amount" />
                    <span asp-validation-for="InitialAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" onclick="return saveme();">Save</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

    </form>
</div>
<script>
    function saveme() {
        $('#img').show();
    }
</script>
