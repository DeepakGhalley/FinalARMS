@using CORE_BOL
@model ApplicantdetailModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Section</a></li>
                    <li class="breadcrumb-item active">Update Section</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Update Applicant Details</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Edit" method="post">
        @*data-ajax="true" data-ajax-method="post">*@
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="ApplicantId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">CID</label>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="Cid" placeholder="Enter CID No" />
                    <span asp-validation-for="Cid" class="text-danger"></span>
                </div>
                <label class="col-sm-2 col-form-label">Licence No<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-4">
                    <input asp-for="LicenceNo" class="form-control" placeholder="Enter Licence No" required />
                    <span asp-validation-for="LicenceNo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Applicant Name<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-4">
                    <input asp-for="ApplicantName" class="form-control" placeholder="Enter Applicant Name" required />
                    <span asp-validation-for="ApplicantName" class="text-danger"></span>
                </div>
                <label class="col-sm-2 col-form-label">Contact No<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-4">
                    <input asp-for="ContactNo" class="form-control" placeholder="Enter Contact No" required />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Post Box No</label>
                <div class="col-sm-4">
                    <input asp-for="PostBoxNo" class="form-control" placeholder="Enter Post Box No" />
                    <span asp-validation-for="PostBoxNo" class="text-danger"></span>
                </div>
                <label class="col-sm-2 col-form-label">Fax No</label>
                <div class="col-sm-4">
                    <input asp-for="FaxNo" class="form-control" placeholder="Enter Fax No" />
                    <span asp-validation-for="FaxNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"> Address<span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-4">
                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter Address" required></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <label class="col-sm-2 col-form-label">Remarks</label>
                <div class="col-sm-4">
                    <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Enter Remarks"></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>
        
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="custom-control custom-checkbox">
                    &nbsp;&nbsp;<input class="custom-control-input" type="checkbox" asp-for="IsActive" checked>
                    <label for="IsActive" class="custom-control-label">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" onclick="return saveme();">Save</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
        <!-- /.card-body -->

    </form>
</div>
<script>
    function saveme() {
        $('#img').show();
    }
</script>

