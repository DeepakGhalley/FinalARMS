                <label asp-for="MobileNo" class="col-sm-2 col-form-label">Mobile No<span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-3">
                    <input asp-for="MobileNo" id="idmobileno" class="form-control" required />
                </div>

            </div>
            <div id="showrate" style="display:none;">
                <div class="form-group row">
                    <label asp-for="Address" class="col-sm-2 col-form-label">Address<span style="font-weight: bold; color:red;">*</span></label>
                    <div class="col-sm-3">
                        <input asp-for="Address" id="idsaddress" class="form-control" required />
                    </div>
                    <label class="col-sm-2 col-form-label">CID<span style="font-weight: bold; color:red;">*</span></label>
                    <div class="col-sm-3">
                        <input asp-for="Cid" id="idcid" class="form-control" required />

                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Name<span style="font-weight: bold; color:red;">*</span></label>
                    <div class="col-sm-3">
                        <input asp-for="Name" id="idsname" class="form-control" required />
                    </div>

                    <label asp-for="Quantity" class="col-sm-2 col-form-label">Quantity<span style="font-weight: bold; color:red;">*</span></label>
                    <div class="col-sm-3">
                        <input asp-for="Quantity" class="form-control" id="quantity" OnChange="av(this)" required />
                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Rate</label>
                    <div class="col-sm-3">
                        <input id="rate" class="form-control" OnChange="av(this)" required readonly />

                    </div>
                    <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-3">
                        <input asp-for="Amount" class="form-control" id="amount" readonly />

                    </div>
                </div>
            </div>


            <div id="showrate1" style="display:none;">
                <div class="form-group row">
                    <label asp-for="Address" class="col-sm-2 col-form-label">Name of Establishment<span style="font-weight: bold; color:red;">*</span></label>
                    <div class="col-sm-3">
                        <input asp-for="Address" id="Establishment" class="form-control" required />
                    </div>
