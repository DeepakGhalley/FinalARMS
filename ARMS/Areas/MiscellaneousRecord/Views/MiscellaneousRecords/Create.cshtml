            MiscellaneousRecordModel.SlabId = parseInt($("#SlabId").val());
            MiscellaneousRecordModel.MobileNo = $("#idmobileno").val();
            MiscellaneousRecordModel.Name = $("#idsname").val();
            MiscellaneousRecordModel.Address = $("#idsaddress").val();
            MiscellaneousRecordModel.Cid = $("#idcid").val();
             MiscellaneousRecordModel.Quantity = parseInt($("#quantity").val());
            MiscellaneousRecordModel.Amount = parseFloat($("#amount").val());
        }



        myarray.push(MiscellaneousRecordModel);

        var json_data = JSON.stringify(myarray);
        console.log(json_data);

        $('#img').show();

        $.ajax({
            type: "POST",
            url: '@Url.Action("CreateMiscellaneousRecordModel", "MiscellaneousRecords")',
            data: json_data,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
               success: function (response) {
                   if (response > 0) {

