            MiscellaneousRecordModel.Name = $("#idsnames").val();
            MiscellaneousRecordModel.Address = $("#Establishment").val();
            MiscellaneousRecordModel.Cid = $("#cids").val();
            MiscellaneousRecordModel.Quantity = parseInt($("#License").val());
             MiscellaneousRecordModel.Amount = parseFloat($("#amounts").val());

        }
        else {
            MiscellaneousRecordModel.TransactionTypeId = parseInt($("#TransactionTypeId").val());
