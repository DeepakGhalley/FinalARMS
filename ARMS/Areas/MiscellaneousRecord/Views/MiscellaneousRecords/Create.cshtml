                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Name<span style="font-weight: bold; color:red;">*</span></label>
                    <div class="col-sm-3">
                        <input asp-for="Name" id="idsnames" class="form-control" required />
                    </div>

                    <label asp-for="Quantity" class="col-sm-2 col-form-label">CID<span style="font-weight: bold; color:red;">*</span></label>
                    <div class="col-sm-3">
                        <input asp-for="Quantity" class="form-control" id="cids" OnChange="av(this)" required />
                    </div>

                </div>
                <div class="form-group row">

                    <label asp-for="Amount" class="col-sm-2 col-form-label">Amount<span style="font-weight: bold; color:red;">*</span></label>
                    <div class="col-sm-3">
                        <input asp-for="Amount" class="form-control" id="amounts" required />

                    </div>
                </div>
            </div>



            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <a cursor: pointer;" class="btn btn-primary" id="SaveMiscellaneousRecordModel">Save </a>


                    <button type="reset" id="Reset" class="btn btn-warning">Cancel</button>

                </div>

            </div>
        </div>
