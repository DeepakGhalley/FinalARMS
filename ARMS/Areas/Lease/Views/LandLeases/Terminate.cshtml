@using CORE_BOL
@model LandLeaseModel
@{
    ViewData["Title"] = "Terminate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dialog-background" style="display:none" id="img">
    <div class="dialog-loading-wrapper">
        <span class="dialog-loading-icon"><img src="~/dist/img/loader.gif" style="width: 100px; height: 100px;" /></span>
    </div>
</div>


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Land Lease</a></li>
                    <li class="breadcrumb-item active">Terminate</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<form class="form-horizontal" asp-action="Terminate" method="post">

    <div class="card card-info">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                <p>@TempData["msg"]</p>
            </div>
        }
        <div class="card-header">
            <h3 class="card-title">Lease Terminate</h3>
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>
                <h3><b>Lease Details</b></h3>
            </p>

            <div class="form-group row">
                <label asp-for="Cid" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.Cid)</label>
                </div>
                <label asp-for="Ttin" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.Ttin)</label>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="taxPayerName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.taxPayerName)</label>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CAddressID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.CAddressID)</label>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="MobileNoID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.MobileNoID)</label>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EmailID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.EmailID)</label>
                </div>
            </div>

            <p>
                <h3><b>Land Details</b></h3>
            </p>

            <div class="form-group row">
                <label asp-for="LocationID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.LocationID)</label>
                </div>
                <label asp-for="thramNo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.thramNo)</label>
                </div>
            </div>

            <div class="form-group row">
                @*<label asp-for="LandDetailId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.PlotNo)</label>
                </div>*@
                <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <label class="col-sm-10 col-form-label">@Html.DisplayFor(model => model.StartDate)</label>
                </div>
            </div>


            <div class="form-group row" style="display:none;">
                <label asp-for="LandLeaseId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="LandLeaseId"  class="form-control" placeholder="Start Date" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TerminateDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="TerminateDate" type="date" class="form-control" placeholder="Start Date" />
                    <span asp-validation-for="TerminateDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TerminateReason" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <textarea asp-for="TerminateReason" class="form-control" rows="3" placeholder=""></textarea>
                    <span asp-validation-for="TerminateReason" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" onclick="return saveme();">Save</button>
                    <button type="reset" id="btnCancel" class="btn btn-warning">Cancel</button>

                </div>

            </div>
        </div>

    </div>
</form>

<script>

    function saveme() {
        $('#img').show();

    }


</script>