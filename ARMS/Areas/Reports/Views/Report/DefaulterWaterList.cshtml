                           ZoneId: $("#idZone").val()

                       },
                       success: function (data) {
                          if (data.length > 0) {
                              window.open("@Url.RouteUrl(new
                                  { Area ="Reports",Controller = "Report", Action = "PrintDefaulterWaterList" })/?CalendarYearId=" + $("#idYear").val() + "&MonthId=" + $("#idMonth").val() + "&ZoneId=" + $("#idZone").val() ,'_blank');
                           }
                           $('#img').hide();
                       },
                       error: function () {
                           alert('error');
                           $('#img').hide();
                       }
                   });
    }

