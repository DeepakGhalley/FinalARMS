@{
    ViewData["Title"] = "IndividualReceiptWiseCollection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" method="get">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="IndividualReceiptWiseCollection">Receipt Wise Demand Collection</a></li>
                        <li class="breadcrumb-item active">Individual Receipt Wise Collection </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->


    <div class="card card-info">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Alert!</h5>
                <p>@TempData["msg"]</p>
            </div>
        }

        <div class="card-header">
            <h3 class="card-title">Individual Receipt Wise Collection</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <hr />
            <div class="form-group row">
                <div class="input-group d-flex justify-content-center col-5">
                    <label class="col-sm-4 col-form-label">From Date<span style="font-weight: bold; color: red;"></span></label>
                    <input id="fromdate" type="date" class="form-control col-6" />
                </div>

                <div class="input-group d-flex justify-content-center col-5">
                    <label class="col-sm-4 col-form-label">To Date<span style="font-weight: bold; color: red;"></span></label>
                    <input id="todate" type="date" class="form-control col-6" />
                </div>

                <div class="input-group-append col-2">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="button" value="Search" class="btn btn-primary" onclick="return PrintReport();" />
                </div>
            </div>

        </div>
    </div>

</form>


<script>

       function PrintReport() {

           if ($("#fromdate").val() == "" && $("#todate").val() == "") {
               swal("Please fill atlease one field to search.!");
               return false;
           }

           var today = new Date($("#fromdate").val());
           var date = today.getFullYear() + '' + ("0" + (today.getMonth() + 1)).slice(-2) + '' +( "0" + today.getDate()).slice(-2)
           var fdate = date;

           var today1 = new Date($("#todate").val());
           var date1 = today1.getFullYear() + '' + ("0" + (today1.getMonth() + 1)).slice(-2) + '' + ("0" + today1.getDate()).slice(-2)
           var tdate = date1;

           console.log(date);

               $.ajax({
                   type: "GET",
                   url: '@Url.Action("PrintIndividualReceiptWiseCollection", "Report")',
                   data: {
                       FromDate: $("#fromdate").val(),
                       ToDate: $("#todate").val()
                   },
                   success: function (data) {
                      if (data.length > 0) {
                          window.open("@Url.RouteUrl(new
                                  { Area = "Reports", Controller = "Report", Action = "PrintIndividualReceiptWiseCollection" })/?FromDate=" + $("#fromdate").val() + "&ToDate=" +  $("#todate").val(), '_blank');

                       }


                       $('#img').hide();

                   },
                   error: function () {
                       alert('error');
                       $('#img').hide();
                   }

               });


   }


</script>