@using CORE_BOL
@model LandOwneshipModel
@{
    ViewData["Title"] = "UpdateLandOwnership";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Land Ownership</a></li>
                    <li class="breadcrumb-item active">Update Land Ownership</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Update Land Ownership</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="UpdateLandOwnership" method="post">
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="LandOwnershipId" id="hdnLandOwnershipId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Land Ownership Type <span style="font-weight: bold; color: red;">*</span></label>
                <div class="col-sm-4">
                    <select class="form-control" asp-for="LandOwnershipTypeId" asp-items="@(new SelectList (@ViewBag.LandOwnershipTypeId,"Value","Text"))">
                    </select>
                    <span asp-validation-for="LandOwnershipTypeId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Net Area/PLR<span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-4">
                    <input asp-for="Plr" class="form-control" id="idplr" required />
                    <span asp-validation-for="Plr" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Thram No<span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-4">
                    <input asp-for="ThramNo" class="form-control" id="idthramno" required />
                    <span asp-validation-for="ThramNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Remarks</label>
                <div class="col-sm-4">
                    <textarea asp-for="Remarks" class="form-control" placeholder="Enter Remarks"></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group row">
            <label class="col-sm-2 col-form-label">Ownership Percentage<span style="font-weight: bold; color:red;">*</span></label>
            <div class="col-sm-4">
                <input asp-for="OwnershipPercentage" class="form-control" id="idownershipercentage" required />
                <span asp-validation-for="OwnershipPercentage" class="text-danger"></span>
            </div>
        </div>*@

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" onclick="return saveme();" class="btn btn-primary">Update</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
            <!-- /.card-body -->

</form>
</div>
<script>

    function saveme() {
        $('#img').hide();
    }

     
</script>
