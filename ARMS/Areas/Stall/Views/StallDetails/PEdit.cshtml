@using CORE_BOL
@model StallDetailVM

@{
    ViewData["Title"] = "PEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Stall</a></li>
                    <li class="breadcrumb-item active">Update Period</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Update Period</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="PEdit" method="post">
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="StallAllocationId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group row">
                <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="SDate" type="date" class="form-control" placeholder="Enter Stall No" />
                    <span asp-validation-for="SDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="EDate" type="date" class="form-control" placeholder="Enter Stall Name" />
                    <span asp-validation-for="EDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"> Remarks </label>
                <div class="col-sm-4">
                    <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Remarks"></textarea>
                </div>
            </div>
    
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" onclick="return saveme();">Save</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
        <!-- /.card-body -->

    </form>
</div>


<script>
    function saveme() {
        $('#img').show();
    }
</script>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script>
        $(function () {
            $("#txt").keypress(function (e) {
                var keyCode = e.keyCode || e.which;
                $("#stallarea").html("");
                var regex = /^[0-9]+$/;
                var isValid = regex.test(String.fromCharCode(keyCode));
                if (!isValid) {
                    $("#stallarea").html("Only Numbers allowed.");
                }
                return isValid;
            });
        });
    </script>





