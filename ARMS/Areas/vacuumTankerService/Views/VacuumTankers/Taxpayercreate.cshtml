<script>

    function av(avSelect) {


            var one = $('#rate').val();
        var two = $('#lblNoOfTrips').val();
            var avvy = one * two;
        $('#amount').val(avvy);


    }

    function displayTaxPayer() {
        $('#taxPayerDiv').show(1000);

            var cid = $('#cid').val();
            var ttin = $('#ttin').val();
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetTaxPayer", "VacuumTankers")',
                    data: {
                        cid: cid,
                        ttin: ttin,
                    },
                    success: function (data) {

                        $('#tptbl_body').empty();
                        if (data.length > 0) {

                            $('#idname').html(data[0].name);
                            $('#idsname').val(data[0].name);

                            $('#lblttin').html(data[0].ttin);
                            $('#idicid').html(data[0].cid);
                            $('#idmmobile').html(data[0].mobileNo);
                            $('#idmobileno').val(data[0].mobileNo);
                            $.each(data, function (key, value) {

                                $('#tptbl_body').append(
                                    '<tr>'
                                    + '<td>' + (key + 1) + '</td>'
                                    + '<td>' + value.plotNo + '</td>'
                                    + '<td>' + value.thramNo + '</td>'
                                    + '<td>' + value.ttin + '</td>'
                                    + '<td>' + value.cid + '</td>'
                                    + '<td>' + value.name + '</td>'
                                    + '<td>' + value.mobileNo + '</td>'
                                    + '<td><a style = "color: #007bff; cursor: pointer;" onclick = "return ownership(' + value.landOwnershipId + ');" >Select</a ></td>'
                                    + '</tr>');
                            });


