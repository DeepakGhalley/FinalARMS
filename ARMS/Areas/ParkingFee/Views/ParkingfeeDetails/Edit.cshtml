@using CORE_BOL
@model ParkingFeeVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Parking Fees</a></li>
                    <li class="breadcrumb-item active">Update Parking Fees</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Update Parking Fees</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Edit" method="post">
        @*data-ajax="true" data-ajax-method="post">*@
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="ParkingFeeDetailId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ParkingZoneId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="ParkingZoneId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.ParkingZoneId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="ParkingZoneId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TaxPayerId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="TaxPayerId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.TaxPayerId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="TaxPayerId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="BillingScheduleId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="BillingScheduleId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.BillingScheduleId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="BillingScheduleId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="InstallmentAmount" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="InstallmentAmount" class="form-control" placeholder="Enter Installment Amount" />
                    <span asp-validation-for="InstallmentAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Remarks" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Remarks" class="form-control" placeholder="Enter Remarks" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                <div class="custom-control custom-checkbox">
                    &nbsp;&nbsp; <input class="custom-control-input" type="checkbox" asp-for="IsActive" checked>
                    <label for="IsActive" class="custom-control-label">
                    </label>
                </div>
            </div>

            @*<div class="form-group row">
                <label asp-for="TerminateDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TerminateDate" type="date" class="form-control" placeholder="Terminate Date" />
                    <span asp-validation-for="TerminateDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TerminateReason" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TerminateReason" class="form-control" placeholder="Terminate Reason" />
                    <span asp-validation-for="TerminateReason" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TerminatedBy" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TerminatedBy" class="form-control" placeholder="Terminate By" />
                    <span asp-validation-for="TerminatedBy" class="text-danger"></span>
                </div>
            </div>*@

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
        <!-- /.card-body -->

    </form>
</div>

