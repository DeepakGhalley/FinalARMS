         Parkingfee1VM.VendorAddress = ($("#lbladdress").val());
         Parkingfee1VM.Amount = parseFloat($("#lblamount").val());
         Parkingfee1VM.FromDate = $("#lblfromdate").val();
         Parkingfee1VM.ToDate = $("#lbltodate").val();



         myarray.push(Parkingfee1VM);

            var json_data = JSON.stringify(myarray);
            console.log(json_data);
        $('#img').show();

            $.ajax({
                type: "POST",
                url: '@Url.Action("Save", "Parkingfees")',
                data: json_data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response > 0) {
