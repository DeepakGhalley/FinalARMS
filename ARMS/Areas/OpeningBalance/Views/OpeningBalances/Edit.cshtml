@*@model CORE_BOL.Entities.MstBank*@
@using CORE_BOL
@model OpeningBalaceVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Bank</a></li>
                    <li class="breadcrumb-item active">Update Bank</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Update Bank</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Edit" method="post">
        @*data-ajax="true" data-ajax-method="post">*@
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="OpeningBalanceId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Particular  <span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-5">
                    <input asp-for="Particular" class="form-control" placeholder="Particular" required />
                    <span asp-validation-for="Particular" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Amount <span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-5">
                    <input asp-for="Amount" class="form-control" placeholder="Amount" required />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Carried on Date <span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-5">
                    <input asp-for="OpeningBalanceCarriedOn" class="form-control" type="date" placeholder="Carried on Date" required />
                    <span asp-validation-for="OpeningBalanceCarriedOn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Remarks <span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-5">
                    <input asp-for="Remarks" class="form-control"  placeholder="Remarks" required />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>
            

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" onclick="return saveme();">Save</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
        <!-- /.card-body -->

    </form>
</div>


<script>
    function saveme() {
        $('#img').hide();
    }
</script>
