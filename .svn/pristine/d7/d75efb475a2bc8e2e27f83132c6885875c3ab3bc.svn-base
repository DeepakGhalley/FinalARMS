<script src="~/plugins/jquery/jquery.min.js"></script>
<script>

    function displayStallDetailMonthlyDemand() {
        if ($('#CIDInput').val() == "" && $('#TTINInput').val() == "") {
            swal('Empty Fields!', '', 'error');
            $('#CIDInput').focus();
            $('#TTINInput').focus();
            return false;
        }
        $('#img').show();

        var Cid = $('#CIDInput').val();
        var Ttin = $('#TTINInput').val();
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetStallRentDemandByCid", "StallDetails")',
                    data: {
                        cid: Cid,
                        ttin: Ttin
                    },
                    success: function (data) {
                        $('#stalldetaildemandtbl_body').empty();
                        $('#stalldetaildiv').show(1000);
                        if (data.length > 0) {
                            $.each(data, function (key, value) {
                                $('#stalldetaildemandtbl_body').append(
                                    '<tr>'
                                    + '<td>' + (key + 1) + '</td>'
                                    + '<td>' + value.ttin + '</td>'
                                    + '<td>' + value.cid + '</td>'
                                    + '<td>' + value.name + '</td>'
                                    + '<td>' + value.mobileNo + '</td>'
                                    + '<td>'
                                    + '<a style = "color: #007bff; cursor: pointer;" onclick = "return StallRentDetails(' + value.taxPayerId + ')" >Select</a >'
                                    + '</td>'
                                    + '</tr>');
                            });
                            //hideall();
                            //$('#stalldetaildiv').show(1000);
                           
                        } else {
                            $('#stalldetaildemandtbl_body').append(
                                '<tr><td colspan="6" style="color: red;">No record found!</td></tr>');
                            //swal({
                            //    title: 'Please Enter valid Value!',
                            //    type: 'error',
                            //    confirmButtonText: 'OK'
                            //});

                            //hideall();
                        }
                        $('#img').hide();

                    },

                    error: function () {
                        alert('error');
                        //hideall();
                    }

                });    }
    function StallRentDetails(taxPayerId) {

        $('#hdnTaxPayerId').val(taxPayerId);

        $('#stallrentdetails').show(1000);
        $('html,body').animate({
            scrollTop: $("#stallrentdetails").offset().top
        }, 'slow');
                    $.ajax({
                    type: "GET",
                    url: '@Url.Action("StallRentDetails", "StallDetails")',
                    data: {
                        id: taxPayerId
                    },
                        success: function (data) {
                            $('#tbodyStallRentDetail').empty();
                            if (data.length > 0) {
                                var res1 = null;
                            $.each(data, function (key, value) {
                                res1 = (value.isTerminated == false) ? '<b><a style = "color: #007bff; cursor: pointer;" onclick = "return GetYear(' + value.startDate + ',' + value.endDate + ',' + value.stallAllocationId + ',' + value.rentalAmount + ',' + value.sid + ');">Select</a ></b>' : '';

                                $('#tbodyStallRentDetail').append(
                                    '<tr>'
                                    + '<td>' + (key + 1) + '</td>'
                                    + '<td>' + value.stallNo + '</td>'
                                    + '<td>' + value.stallArea + '</td>'
                                    + '<td>' + value.billingScheduleName + '</td>'
                                    + '<td>' + value.rentalAmount + '</td>'
                                    + '<td>' + res1 + '</td>'
                                    + '</tr>');
                            });
                            $('#hdnStallTypeId').val(data[0].stallTypeId);

                        } else {
                            $('#tbodyStallRentDetail').append(
                                '<tr><td colspan="6" style="color: red;">No record found!</td></tr>');

                        }

                    },

                    error: function () {
                        alert('error');
                    }

                });    }

    function GetYear(stDate, enDate, said, amt, sid) {
        $('#tblstallperiod').hide();
        $('#stallrentDemand').hide();

        $.ajax({
            type: "GET",
            url: '@Url.Action("GetYear", "StallDetails")',
            data: {
                startDate: stDate,
                endDate: enDate
            },

            success: function (data) {
                if (data.length > 0) {
                    $('#StartDate').val(stDate);
                    $('#EndDate').val(enDate);
                    $('#yearbody').empty();

                    $.each(data, function (key, value) {

                        $('#yearbody').append(
                            '<tr>'
                            + '<td>' + (key + 1) + '</td>'
                            + '<td>' + value.year + '</td>'
                            + '<td>'
                            + '<a style = "color: #007bff; cursor: pointer;" onclick = "return GetStallDemandScheduleMonthly(' + said + ',' + amt + ',' + stDate + ',' + enDate + ',' + sid + ',' + value.year +');" >Select</a >'
                            + '</td>'

                            + '</tr>');

                    });
                    $('#stallrentperiod').show();
                    $('html,body').animate({
                        scrollTop: $("#stallrentperiod").offset().top
                    }, 'slow');
                } else {
                    swal('no data');

                }

            },

            error: function () {
                alert('error');
            }

        });
    }


    function GetStallDemandScheduleMonthly(stallAllocationId, amt, stDate, enDate, sid, yr) {
         $('#hdnStall').val(stallAllocationId);
        $('#hdnAmt').val(amt);
        $('#hdnStartdate').val(stDate);
        $('#hdnEnddate').val(enDate);
        $('#hdnScheduleId').val(sid);
        $('#stallrentDemand').hide(1000);
         $('#hdnYear').val(yr);

                    $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetStallDemandScheduleMonthly", "StallDetails")',
                    data: {
                        id: stallAllocationId,
                        startDate: stDate,
                        endDate: enDate,
                        yr: yr
                        },

                        success: function (data) {
                            if (data.length > 0) {
                                console.log(data);
                                //alert(yr);
                            $('#StartDate').val(stDate);
                                $('#EndDate').val(enDate);
                                var res = null
                                $('#stallrentperiodbody').empty();

                                $.each(data, function (key, value) {

                                    res = (value.demandNoId != null) ? '<b><a style="cursor: pointer; color: forestgreen;" title="View Demand" onclick="return displayDemand(' + value.demandNoId + ',\'' + value.month +'\');">View</a></b>' : '<b><a style="cursor: pointer; color: forestgreen;" title="Generate Demand" onclick="return GenerateDemand(' + value.id + ',' + value.days + ',' + value.monthId + ',' + value.year + ',' + amt + ',' + value.totalDays +');">Generate</a></b>';

                                    $('#stallrentperiodbody').append(
                                      '<tr>'
                                    + '<td>' + (key + 1) + '</td>'
                                    + '<td>' + value.year + '</td>'
                                    + '<td>' + value.month + '</td>'
                                    + '<td>' + value.days + '</td>'
                                    + '<td id="tdays" hidden>' + value.totalDays + '</td>'
                                    + '<td>' + res + '</td>'

                            + '</tr>');

                                    });
                                $('#tblstallperiod').show();
                                $('html,body').animate({
                                    scrollTop: $("#tblstallperiod").offset().top
                                }, 'slow');
                        } else {
                            swal('no data');

                        }

                    },

                    error: function () {
                        alert('error');
                    }

                });
    }
    function GenerateDemand(stallAllocationId, days, month, year, amount, totalDays) {
                    $.ajax({
                    type: "POST",
                    url: '@Url.Action("GenerateDemand", "StallDetails")',
                    data: {
                        stallAllocationId: parseInt(stallAllocationId),
                        pDays: days,
                        pMonth: month,
                        pYear: year,
                        ScheduleId: parseInt($('#hdnScheduleId').val()),
                        Amount: parseFloat(amount),
                        taxPayerId: parseInt($('#hdnTaxPayerId').val()),
                        StallTypeId: parseInt($('#hdnStallTypeId').val()),
                        totalDays: parseInt(totalDays)

                        },

                        success: function (data) {
                            //if (data.length > 0) {
                            swal({
                                title: "Success",
                                icon: "Success",

                            });
                            GetStallDemandScheduleMonthly($('#hdnStall').val(), $('#hdnAmt').val(), $('#hdnStartdate').val(), $('#hdnEnddate').val(), $('#hdnScheduleId').val(), $('#hdnYear').val());

                    },

                    error: function () {
                        alert('error');
                    }

                });
    }
    function displayDemand(demandNoId, mnth) {
        $('#stallrentDemand').show(1000);
        $("#lblBill").html(mnth);


                $.ajax({
                type: "GET",
                url: '@Url.Action("GetStallRentDemand", "StallDetails")',
                data: {
                    DemandNoId: demandNoId,
                },
                success: function (data) {
                console.log(data);
                    $('#tblDemand').empty();
                    if (data.length > 0) {

                        var datec = data[0].demandDate;
                        const c = new Date(datec);
                        const CreatedDate = ("0" + c.getDate()).slice(-2) + "/" + ("0" + (c.getMonth() + 1)).slice(-2) + '/' + c.getFullYear()

                        var sdate = data[0].sDate;
                        const s = new Date(sdate);
                        const StartDate = ("0" + s.getDate()).slice(-2) + "/" + ("0" + (s.getMonth() + 1)).slice(-2) + '/' + s.getFullYear()

                        var edate = data[0].eDate;
                        const e = new Date(edate);
                        const EndDate = ("0" + e.getDate()).slice(-2) + "/" + ("0" + (e.getMonth() + 1)).slice(-2) + '/' + e.getFullYear()

                       

                        $("#lblName").html(data[0].taxPayerName);
                        $("#lblTTIN").html(data[0].ttin);
                        $("#lblCID").html(data[0].cid);
                        $("#lblAddress").html(data[0].address);
                        $("#lblDemandDate").html(CreatedDate);
                        $("#lblDemandNo").html(data[0].demandNo);
                        $("#lblSDate").html(StartDate);
                        $("#lblEDate").html(EndDate);

                        $('#qrDemandNo').attr('src', `data:image/png;base64,${data[0].qrImage}`);


                        $.each(data, function (key, value) {
                            $('#tblDemand').append(
                                '<tr>' + '<td>' + (key + 1) + '</td>'
                                + '<td>' + value.taxName + '</td>'
                                + '<td>' + value.totalAmount+ '</td>'
                                + '</td>'
                                + '</tr>');
                        });
                        $('#img').hide();
                        $('html,body').animate({
                            scrollTop: $("#stallrentDemand").offset().top
                        }, 'slow');

                    }
                    else {
                        $('#img').hide();
                        $("#stallrentDemand").show(1000);
                        $('#tblDemand').append(
                            '<tr><td colspan="8" style="color: red;">No record found!</td></tr>');
                    }

                },
                    error: function () {
                    $('#img').hide();
                    alert('Error occured');
                    }
                });


            $.ajax({
             type: "GET",
                url: '@Url.Action("GetUserName", "StallDetails")',
                    data: {
                        DemandNoId: demandNoId,
                },
                    success: function (data) {
                        if (data.length > 0) {

                            $("#lblUser").html(data[0].userName);
                        }
                    },

                });

        }

    function printPage() {
            var dataToPrint = document.getElementById("toprint");
            newWin = window.open("");
            newWin.document.write(dataToPrint.outerHTML);
            newWin.print();
            newWin.close();
        }

    function ok() {
        location.reload();

        }
</script>