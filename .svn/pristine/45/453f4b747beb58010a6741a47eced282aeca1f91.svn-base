
@{
    ViewData["Title"] = "LongAndShortTermCollectionReport";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<form class="form-horizontal" method="get">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="#">Report</a></li>
                        <li class="breadcrumb-item active">Long And Short Term Collection</li>
                    </ol>
                </div>
            </div>
        </div> 
    </div>
     


    <div class="card card-info">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Alert!</h5>
                <p>@TempData["msg"]</p>
            </div>
        }

        <div class="card-header">
            <h3 class="card-title">Long And Short Term Collection</h3>
        </div>
        
        <div class="card-body">

            <div class="form-group row">
                <div class="input-group d-flex justify-content-center col-3">
                    <label class="col-sm-4 col-form-label">Start Date<span style="font-weight: bold; color: red;"></span></label>
                    <input id="lblsdate" type="date" class="form-control col-8" required />
                </div>
                <div class="input-group d-flex justify-content-center col-3">
                    <label class="col-sm-4 col-form-label">End Date<span style="font-weight: bold; color: red;"></span></label>
                    <input id="lbledate" type="date" class="form-control col-8" required />
                </div>
                <div class="input-group d-flex justify-content-center col-3">
                    <label class="col-sm-4 col-form-label">LeaseType</label>
                    <div class="col-sm-7">
                        <select class="form-control" id="IdLeaseTypeId" asp-items="@(new SelectList (@ViewBag.LeaseTypeId,"Value","Text"))">
                        </select>
                        <span id="validationcheck" class="text-danger"></span>
                    </div>
                </div>
                <div class="input-group-append d-flex justify-content-center col-3">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="button" value="Search" class="btn btn-primary" onclick="return PrintReportLongAndShortTerm();" />
                </div>
            </div>

        </div>
    </div>

</form>

<script>
    
           function PrintReportLongAndShortTerm() {
               if ($("#lblsdate").val() == "" || $("#lbledate").val() == "") {
                   swal("Please fill both fields to search.!");
                   $("#lblsdate").focus();

                   return false;
               }
               //$('#img').show();

               var today = new Date($("#lblsdate").val());
               var date = today.getFullYear() + '' + ("0" + (today.getMonth() + 1)).slice(-2) + '' +( "0" + today.getDate()).slice(-2)
               var sdate = date;

               var today1 = new Date($("#lbledate").val());
               var date1 = today1.getFullYear() + '' + ("0" + (today1.getMonth() + 1)).slice(-2) + '' + ("0" + today1.getDate()).slice(-2)
               var edate = date1;

               var leasetype = $('#IdLeaseTypeId').val();

               console.log(date);

                   $.ajax({
                       type: "GET",
                       url: '@Url.Action("PrintReportLongAndShortTermCollection", "Report")',
                       data: {
                           sdate: $("#lblsdate").val(),
                           edate: $("#lbledate").val(),
                           LeaseTypeId: leasetype
                       },
                       success: function (data) {
                          if (data.length > 0) {
                              window.open("@Url.RouteUrl(new
                                     { Area ="Reports",Controller = "Report", Action = "PrintReportLongAndShortTermCollection" })/?sdate=" + $("#lblsdate").val() + "&edate="
                                  + $("#lbledate").val() + "&LeaseTypeId=" + leasetype, '_blank');
                           }
                           $('#img').hide();
                       },
                       error: function () {
                           alert('error');
                           $('#img').hide();
                       }
                   });
    }

</script>
