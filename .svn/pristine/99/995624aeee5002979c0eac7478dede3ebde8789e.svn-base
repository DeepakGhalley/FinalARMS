@using CORE_BOL
@model HouseAllocationVM
      
@{
    ViewData["Title"] = "Terminate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">House Allocation</a></li>
                    <li class="breadcrumb-item active">Terminate House Allocation</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Terminate</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Terminate" method="post">
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="HouseAllocationId" id="HouseAllocationId" />
            <input type="hidden" asp-for="IsTerminated" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Terminate Date <span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-4">
                    <input asp-for="TerminateDate" class="form-control" placeholder="Enter Stall No" type="date" />
                    <span asp-validation-for="TerminateDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"> Terminate Reason </label>
                <div class="col-sm-4">
                    <textarea asp-for="TerminateReason" class="form-control" rows="3" placeholder="Remarks"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" onclick="return validate();" class="btn btn-primary">Save</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
        <!-- /.card-body -->

    </form>
</div>
<script>
    function validate() {
        if ($('#HouseAllocationId').val() != $('#HouseAllocationId').val()) {
            swal("House Allocation Not Found!");
            return false;
        }
    };
    
</script>
