@*@model IEnumerable<CORE_BOL.Entities.MstBank>*@
@model List<CORE_BOL.RevenueTransferVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Income statement</a></li>
                    <li class="breadcrumb-item active">Income statement Details</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->


<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-check"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }

    <div class="card-header">
        <h3 class="card-title">Income statement  Details</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <input id="Onlineamount" hidden />
        <input id="mannualamount" hidden />
        <input id="transferamount" hidden />
        <input id="OBamount" hidden />

        <div class="card-header">
            
        </div>
        <div class="card-body">

            <div class="row">
                <div class="input-group d-flex justify-content-center col-5">
                    <label class="col-sm-4 col-form-label">Start Date<span style="font-weight: bold; color: red;"></span></label>
                    <input id="sdate" type="date" class="form-control col-6" />
                </div>

                <div class="input-group d-flex justify-content-center col-5">
                    <label class="col-sm-4 col-form-label">End Date<span style="font-weight: bold; color: red;"></span></label>
                    <input id="edate" type="date" class="form-control col-6" />
                </div>


                <div class="input-group-append col-2">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button class="btn btn-primary" onclick="return functionchecK();">Search</button>
                </div>
            </div>
        </div>
    </div>

        <div id="Info" style="display: none;">
          
            
            <table id="example1" class="table table-bordered table-striped">
                <thead>

                    <tr>

                        <th>Particular</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tr><td align="right"><b>Opening Balance(OB)</b></td><td><label id="OB" class="col-form-label" readonly /> </td></tr>
                <tr><td align="right"><b>Opening Date</b></td><td><label id="OD" class="col-form-label" readonly /> </td></tr>
                <tr><td align="right"><b>Revenue Collected:(From opening date till current date(RC))</b></td><td><label id="RevenueCollected" class="col-form-label" readonly /> </td></tr>
                <tr><td align="right"><b>Total Revenue(TR):(OB)+(RC)</b></td><td><label id="TR" class="col-form-label" readonly /> </td></tr>
                <tr><td align="right"><b>Total Used(TT):</b></td><td><label id="TotalUse" class="col-form-label" readonly /> </td></tr>
                <tr><td align="right"><b>Net Balance(NB):(TR -TT)</b></td><td><label id="NB" class="col-form-label" readonly /> </td></tr>
            </table>
        </div>
    </div>


<script src="~/plugins/jquery/jquery.min.js"></script>
<script>

    function functionchecK() {

        var today = new Date($("#sdate").val());
        var date = today.getFullYear() + '' + ("0" + (today.getMonth() + 1)).slice(-2) + '' + ("0" + today.getDate()).slice(-2)
        let text1 = date.toString();
        var sdate = text1;

        var today1 = new Date($("#edate").val());
        var date1 = today1.getFullYear() + '' + ("0" + (today1.getMonth() + 1)).slice(-2) + '' + ("0" + today1.getDate()).slice(-2)
        let text = date1.toString();
        var edate = text;

        var today2 = new Date($("#sdate").val());
        var date2 = ("0" + today2.getDate()).slice(-2) + '/' + ("0" + (today2.getMonth() + 1)).slice(-2) + '/' + today2.getFullYear() 
        let text2 = date2.toString();
        var opdate = text2;
       

        //online
            $.ajax({
            type: "GET",
           url: '@Url.Action("Online", "RevenueTransfers")',
            data: {
                StartDate: sdate,
                EndDate: edate

            },
            dataType: "json",
                success: function (data) {
                    $('#img1').hide();
                    console.log(data);
                    $('#Onlineamount').html('');
                    if (data.length > 0) {
                        $("#Onlineamount").val(data[0].totalAmount);
                        $('#Info').show(1000);
                        //$.each(data, function (key, value) {
                        //    $('#Onlineamount').append(
                        //        "  Nu.  " + value.totalAmount.toFixed(2) + ""
                        //    );

                        //});

                    }
                    else {
                        $('#img1').hide();
                      alert('error');
                }

            },

            error: function () {
                alert('error');
                $('#img1').hide();
            }
            });

        //transfer
         $.ajax({
            type: "GET",
           url: '@Url.Action("transfer", "RevenueTransfers")',
            data: {
                StartDate: sdate,
                EndDate: edate
            },
            dataType: "json",
                success: function (data) {
                    $('#img1').hide();
                    console.log(data);
                    $('#transferamount').html('');
                    if (data.length > 0) {
                        $("#transferamount").val(data[0].totalAmount);
                        //$.each(data, function (key, value) {
                        //    $('#transferamount').append(
                        //        "  Nu.  " + value.totalAmount.toFixed(2) + ""
                        //    );

                        //});

                    }
                    else {
                        $('#img1').hide();
                      alert('error');
                }

            },

            error: function () {
                alert('error');
                $('#img1').hide();
            }
         });

        //openingbalance
              $.ajax({
            type: "GET",
           url: '@Url.Action("openingbalance", "RevenueTransfers")',
            data: {
                StartDate: sdate,
                EndDate: edate

            },
            dataType: "json",
                success: function (data) {
                    $('#img1').hide();
                    console.log(data);
                    $('#OBamount').html('');
                    if (data.length > 0) {
                        $("#OBamount").val(data[0].totalAmount);
                        //$.each(data, function (key, value) {
                        //    $('#OBamount').append(
                        //        "  Nu.  " + value.totalAmount.toFixed(2) + ""
                        //    );

                        //});

                    }
                    else {
                        $('#img1').hide();
                      alert('error');
                }

            },

            error: function () {
                alert('error');
                $('#img1').hide();
            }
              });

        // mannual
             $.ajax({
            type: "GET",
           url: '@Url.Action("mannual", "RevenueTransfers")',
            data: {
                StartDate: sdate,
                EndDate: edate

            },
            dataType: "json",
                success: function (data) {
                    $('#img1').hide();
                    console.log(data);
                    $('#mannualamount').html('');
                    if (data.length > 0) {
                        $("#mannualamount").val(data[0].totalAmount);
                        

                    }
                    else {
                        $('#img1').hide();
                      alert('error');
                }

            },

            error: function () {
                alert('error');
                $('#img1').hide();
            }
             });

        var ma = 0;
        var ta = 0;
        var oa = 0;
        var ob = 0;
        var Arc = 0;
        var Trc = 0;
        var Anb = 0;

        ma = parseFloat($("#mannualamount").val());
        ta = parseFloat($("#transferamount").val());
        oa = parseFloat($("#Onlineamount").val());
        ob = parseFloat($("#OBamount").val());

     
        Arc = parseFloat(ma) + parseFloat(oa);
        Trc = parseFloat(ob) + parseFloat(Arc);
        Anb = parseFloat(Trc) - parseFloat(ta);
        
        
        $("#OB").html(ob);
        $("#RevenueCollected").html(Arc);
        $("#TR").html(Trc);
        $("#NB").html(Anb);
        $("#TotalUse").html(ta);

       
        $("#OD").html(opdate);

      
    }

    
</script>
