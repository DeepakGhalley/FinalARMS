</form>

<script src="~/plugins/jquery/jquery.min.js"></script>

<script>

        //function myFunction() {
        //    var x = document.getElementById("myNumber").value;

        //}


     $(function () {
        $('#luc').change(function () {


            $('#img').show();

            $.ajax({
                type: "POST",
                 url: '@Url.Action("PopulateLUSC", "LandDetails")',
               
                data: {
                id: parseInt($('#luc').val())
                },
                success: function (data) {

                console.log(data);
                $('#lusc').empty();

                $('#lusc').append(
                '<option value=0>--Please Select--</option>');

                if (data.length > 0) {

                for (var i = 0; i < data.length; i++) {
                    var newOption = $('<option value=' + data[i].landUseSubCategoryId + '> '
                        + data[i].landUseSubCategory
                    + '  </option>');
                $('#lusc').append(newOption);
                }

                $('#img').hide();
                }
                else {
                $('#img').hide();
                }

                },
                error: function () {
                $('#img').hide();
                alert('Error occured');
                }
                });
                });

                });


    //Validation
     function saveme() {
         //1.Land Use Category
         if ($('#luc option:selected').val() == 0) {
             $('#errorluc').html('Please Select a Value');
