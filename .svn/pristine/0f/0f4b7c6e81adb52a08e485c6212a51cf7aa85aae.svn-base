<script>
    function SearchDetails() {
        if ($('#PlotNoInput').val() == "") {
            swal('Empty Fields', 'Please Enter Valid Plot No', 'error');
            $('#PlotNoInput').focus();
            return false;
        }

        var PlotNo = $('#PlotNoInput').val();
        $.ajax({
                type: "GET",
                url: '@Url.Action("SearchDetails", "WaterConnections")',
                data: {
                    plotno: PlotNo,
                },
                dataType: "json",
                success: function (data) {
                    $('#tbl_body').empty();
                    if (data.length > 0) {
                        $.each(data, function (key, value) {
                            $('#tbl_WConnection').show(1000);

                        });
                    } else {
                        $('#tbl_body').append(
                            '<tr><td colspan="4" style="color: red;">No record found!</td></tr>');

                        swal({
                            title: 'Please Enter valid Value!',
                            type: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                },
         });
    }

</script>
