@using CORE_BOL
@model ParkingFeeVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form class="form-horizontal" method="get">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Parking fee</a></li>
                        <li class="breadcrumb-item active">Parking fee Details</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->


    <div class="card card-info">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Alert!</h5>
                <p>@TempData["msg"]</p>
            </div>
        }

        <div class="card-header">
            <h3 class="card-title">Parking fee</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-outline-danger btn-lg" title="Add New">
                    <b>
                        <i class="fas fa-plus"></i> Add New
                    </b>
                </a>
            </p>
            <div class="row">
                <div class="input-group d-flex justify-content-center col-5">
                    <label class="col-sm-4 col-form-label">CID No<span style="font-weight: bold; color: red;"></span></label>
                    <input id="Cid" class="form-control col-6" />
                </div>

                <div class="input-group d-flex justify-content-center col-5">
                    <label class="col-sm-4 col-form-label">TTIN<span style="font-weight: bold; color: red;"></span></label>
                    <input id="ttin" class="form-control col-6" />
                </div>

                <div class="input-group-append col-2">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="button" value="Search" class="btn btn-primary" onclick="return displaydataDetails();" />
                </div>
            </div>
        </div>
    </div>
</form>

<div class="card card-info" style="display:none;" id="parkingfeetbl">
    <div class="card-header">
        <h3 class="card-title">Tax Payer</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead style="background-color:mediumaquamarine">

                <tr>
                    <th>Sl.no</th>
                    <th>Name</th>
                    <th>TTIN</th>
                    <th>CID</th>
                    <th>Mobile No.</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tbl_body">
            </tbody>
        </table>
    </div>
</div>

<div class="card card-info" style="display:none;" id="parkingdetails">
    <div class="card-header">
        <h3 class="card-title">Parking Fee Details</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead style="background-color:mediumaquamarine">

                <tr>
                    <th>Sl.no</th>
                    <th>Name</th>
                    <th>Billing Schedule</th>
                    <th>Installment Amount</th>
                    <th>Is Active</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tbodyParkingfeeDetail">
            </tbody>
        </table>
    </div>
</div>

<!-- Terminate -->
<div class="card card-info" style="display:none;" id="terminate">
    <div class="card-header">
        <h3 class="card-title">Terminate</h3>
    </div>
    <form asp-action="Terminate" method="post">

        <div class="card-body">
            <div class="form-group row">
                <input asp-for="ParkingFeeDetailId" id="hdnParkingFeeDetailId" hidden />
                <label asp-for="TerminateDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="TerminateDate" type="date" class="form-control" placeholder="Start Date" />
                    <span asp-validation-for="TerminateDate" class="text-danger"></span>
                </div>
                <label asp-for="TerminateReason" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="TerminateReason" class="form-control" placeholder="Terminate Reason" type="text" />
                    <span asp-validation-for="TerminateReason" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <button type="reset" id="btnCancel" class="btn btn-warning" onclick="hideTerminate()">Cancel</button>
                </div>

            </div>
        </div>
    </form>
</div>

<!-- Extension -->
<div class="card card-info" style="display:none;" id="extension">
        <div class="card-header">
            <h3 class="card-title">Extension</h3>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <input id="ParkingFeeDetailId" hidden />

                <label class="col-sm-2 col-form-label">Start Date<span style="font-weight:bold; color:red;">*</span></label>
                <div class="col-sm-4">
                    <input type="date" id="startDate" class="form-control" placeholder="Start Date" />
                </div>
                <label class="col-sm-2 col-form-label">End Date<span style="font-weight:bold; color:red;">*</span></label>
                <div class="col-sm-4">
                    <input type="date" id="endDate" class="form-control" placeholder="Start Date" />
                </div>
            </div>
            <div class="form-group row">

                <label class="col-sm-2 col-form-label">Remarks</label>
                <div class="col-sm-4">
                    <input class="form-control" id="remarks" placeholder="Remarks" type="text" />
                </div>
            </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="submit" class="btn btn-primary" id="saveExtension" value="Save" />
                        <button type="reset" id="btnCancel" class="btn btn-warning" onclick="hideExtension()">Cancel</button>
                    </div>

                </div>
            </div>
        </div>

<script src="~/plugins/jquery/jquery.min.js"></script>

<script>

    function hideExtension() {
        $('#extension').hide(1000);
    }

    function hideTerminate() {
        $('#terminate').hide(1000);
    }

    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
        });
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });

    function displaydataDetails() {

            var Cid = ($('#Cid').val());
            var TTIN = $('#ttin').val();

            if (Cid == Cid || Name == Name) {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("Getdata", "ParkingfeeDetails")',
                    data: {
                        Cid: Cid,
                        TTIN: TTIN
                    },
                    success: function (data) {
                        $('#tbl_body').empty();
                        if (data.length > 0) {

                            $.each(data, function (key, value) {
                                $('#parkingfeetbl').show(1000);
                                $('#tbl_body').append(
                                    + '<tr>'
                                    + '<td>' + (key + 1) + '</td>'
                                    + '<td>' + value.name + '</td>'
                                    + '<td>' + value.ttin + '</td>'
                                    + '<td>' + value.cid + '</td>'
                                    + '<td>' + value.mobileNo + '</td>'
                                    + '<td>' + value.email + '</td>'

                                    + '<td>'
                                    + '<a style = "color: #007bff; cursor: pointer;" onclick = "return displayParkingDetails(' + value.taxPayerId + ' )" title = "Extension" >Select</a >'
                                    + '</td>'
                                    + '</tr>');
                            });
                       } else {
                            $('#tbl_body').append(
                                '<tr><td colspan="4" style="color: red;">No record found!</td></tr>');
                            swal({
                                title: 'Please Enter valid Value!',
                                type: 'error',
                                confirmButtonText: 'OK'
                            });
                        }

                    },

                    error: function () {
                        alert('error');
                    }

                });
            }
            else {
                swal('Please Enter Correct CID or Name');
            }

    }

    function displayParkingDetails(taxPayerId) {

        $('#parkingdetails').show(1000);
        $('html,body').animate({
            scrollTop: $("#parkingdetails").offset().top
        }, 'slow');
                    $.ajax({
                    type: "GET",
                    url: '@Url.Action("ParkingFeeDetails", "ParkingfeeDetails")',
                    data: {
                        id: taxPayerId,
                    },
                        success: function (data) {
                            $('#tbodyParkingfeeDetail').empty();
                        if (data.length > 0) {
                            $.each(data, function (key, value) {

                                $('#tbodyParkingfeeDetail').append(
                                    '<tr>'
                                    + '<td>' + (key + 1) + '</td>'
                                    + '<td>' + value.parkingZoneName + '</td>'
                                    + '<td>' + value.billingScheduleName + '</td>'
                                    + '<td>' + value.installmentAmount + '</td>'
                                    + '<td>' + value.isActive + '</td>'
                                    + '<td>' + value.startDate + '</td>'
                                    + '<td>' + value.endDate + '</td>'
                                    + '<td>'
                                    + '<a style = "color: #007bff; cursor: pointer;" onclick = "return Extension(' + value.parkingFeeDetailId + ');" >&nbsp; Extension &nbsp; |</a >'
                                    + '&nbsp;<a style = "color: #007bff; cursor: pointer;" onclick = "return Terminate(' + value.parkingFeeDetailId + ');" >&nbsp;Terminate</a >'

                                    + '</td>'
                                    + '</tr>');
                            });

                        } else {
                            $('#tbodyParkingfeeDetail').append(
                                '<tr><td colspan="7" style="color: red;">No record found!</td></tr>');

                        }

                    },

                    error: function () {
                        alert('error');
                    }

                });
    }

    function Terminate(id) {

        $('#hdnParkingFeeDetailId').val(id);
        $('#terminate').show(1000);
        $('#extension').hide(1000);

    }

    function Extension(id) {

        $('#ParkingFeeDetailId').val(id);
        $('#extension').show(1000);
        $('#terminate').hide(1000);


    }

    $("#saveExtension").click(function () {
            if ($('#startDate').val() >= $('#endDate').val()) {
                swal('Start Date should be greater than End Date');
                return false;
            }
        var myarray = [];
        var ParkingFeePeriodVM = {};

        ParkingFeePeriodVM.ParkingFeeDetailId = parseInt($("#ParkingFeeDetailId").val());
        ParkingFeePeriodVM.StartDate = $("#startDate").val();
        ParkingFeePeriodVM.EndDate = $("#endDate").val();
        ParkingFeePeriodVM.Remarks = $("#remarks").val();
        myarray.push(ParkingFeePeriodVM);

          var json_data = JSON.stringify(myarray);
        $('#img').show();

        $.ajax({
            type: "POST",
            url: '@Url.Action("Extension", "ParkingfeeDetails")',
            data: json_data,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {

                $('#img').hide();
                swal({
                    title: 'Success',
                    type: 'success',
                    showConfirmButton: false,
                })
                setTimeout(function () {
                    location.reload();
                }, 1500);
            },
            failure: function (response) {
                $('#img').hide();
                swal("Creation Failed");
            },
            error: function (response) {
                $('#img').hide();
                swal("Error while inserting");
            }
        });


      });

</script>
