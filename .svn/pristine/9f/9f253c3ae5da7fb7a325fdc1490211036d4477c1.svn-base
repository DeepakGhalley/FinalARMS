    //Display Details

    function displaydataDetails() {
        $('#Cid').insertAfter(function () {
            var Cid = ($('#Cid').val());
            var Name = $('#Name').val();
            var fromdate = $('#idfromdate').val();
            var todate = $('#idtodate').val();
            if (Cid == Cid || Name == Name) {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("Getdata", "MiscellaneousRecords")',
                    data: {
                        Cid: Cid,
                        Name: Name,
                        fromdate: fromdate,
                        todate: todate
                    },
                    success: function (data) {
                        $('#tbl_body').empty();
                        if (data.length > 0) {

                            $.each(data, function (key, value) {
                                $('#ec_renewal').show(1000);
                                $('#tbl_body').append(
                                    '<tr>'
                                    + '<td>' + (key + 1) + '</td>'
                                    + '<td>' + value.name + '</td>'
                                    + '<td>' + value.address + '</td>'
                                    + '<td>' + value.cid + '</td>'
                                    + '<td>' + value.mobileNo + '</td>'
                                    + '<td>' + value.quantity + '</td>'
                                    + '<td>' + value.rate + '</td>'
                                    + '<td>' + value.amount + '</td>'

                                    + '<td>' + value.tax + '</td>'

                                    + '<td>'
                                    + '<a style = "color: #007bff; cursor: pointer;" onclick = "return edit(' + value.miscellaneousRecordId + ' )" title = "EDIT" > <i class="fas fa-edit"></i>  </a >'
                                    + '&nbsp;&nbsp; | &nbsp;&nbsp;<a style = "color: #007bff; cursor: pointer;" onclick = "return view(' + value.miscellaneousRecordId + ' )" title = "view" > <i class="fas fa-eye"></i>  </a >'
                                    + '&nbsp;&nbsp; | &nbsp;&nbsp;<a style = "color: #007bff; cursor: pointer;" onclick = "return displaydemand('+ value.miscellaneousRecordId + ' )"   title = "PrintDemand">PrintDemand </a >'
                                    + '</td>'
                                    + '</tr>');
                            });
                       } else {
                            $('#tbl_body').append(
                                '<tr><td colspan="4" style="color: red;">No record found!</td></tr>');
                            swal({
                                title: 'Please Enter valid Value!',
                                type: 'error',
                                confirmButtonText: 'OK'
                            });
                        }

                    },

                    error: function () {
                        alert('error');
                    }

                });
            }
            else {
                swal.fire('PLease Enter Correct CID or  Name');
            }
        });

    }
    function edit(id) {

        window.location.href = "MiscellaneousRecords/Edit?id=" + id;
    }
    function view(id) {

        window.location.href = "MiscellaneousRecords/Details?id=" + id;
    }


        function displaydemand(miscellaneousRecordId) {
