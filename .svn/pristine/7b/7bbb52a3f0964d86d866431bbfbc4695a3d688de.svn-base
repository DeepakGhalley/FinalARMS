@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Vacuum Tanker Service</a></li>
                    <li class="breadcrumb-item active">Create New Data</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<form class="form-horizontal" asp-action="Create" method="post">
    @*data-ajax="true" data-ajax-method="post">*@

    <div class="card card-info">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                <p>@TempData["msg"]</p>
            </div>
        }
        <div class="card-header">
            <h3 class="card-title">Create Vacuum Tanker Service</h3>

        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

            <div class="form-group row">

                <label class="col-sm-2 col-form-label">Name<span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-3">
                    <input asp-for="Name" id="idsname" class="form-control" required />
                </div>
                &nbsp;  &nbsp;
                <label asp-for="ContactAddress" class="col-sm-2 col-form-label">Address<span style="font-weight: bold; color:red;">*</span></label>
                <div class="col-sm-3">
                    <input asp-for="ContactAddress" id="idsaddress" class="form-control" required />
                </div>


            </div>
            </div>
        
        <div class="form-group row">
            &nbsp;&nbsp;&nbsp;
            <label class="col-sm-2 col-form-label">Mobile No<span style="font-weight: bold; color:red;">*</span></label>
            <div class="col-sm-3">
                <input asp-for="MobileNo" id="idmobileno" class="form-control" required />
            </div>
            <label asp-for="NoOfTrips" class="col-sm-2 col-form-label">No Of Trips<span style="font-weight: bold; color:red;">*</span></label>
            <div class="col-sm-3">
                <input asp-for="NoOfTrips" id="lblNoOfTrips" class="form-control" OnChange="av(this)" required />
            </div>
        </div>
        <div class="form-group row">
            &nbsp;&nbsp;&nbsp;
            <label class="col-sm-2 col-form-label">Rate</label>
            <div class="col-sm-3">
                <input id="rate" class="form-control" OnChange="av(this)" required readonly />

            </div>
            <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="Amount" class="form-control" id="amount" readonly />

            </div>
        </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <a cursor: pointer;" class="btn btn-primary" id="Save">Save </a>


                    <button type="reset" id="Reset" class="btn btn-warning">Cancel</button>

                </div>

            </div>
        </div>
        <!-- /.card-body -->
        <!-- /.card-footer -->
   
</form>


