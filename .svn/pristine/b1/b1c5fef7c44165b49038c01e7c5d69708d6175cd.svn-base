@model List<CORE_BOL.SewerageConnectionVM>
@{
    ViewData["Title"] = "SewerageIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="SewerageIndex">Sewerage Connection Details</a></li>
                    <li class="breadcrumb-item active">Sewerage Transaction</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-check"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }

    <div class="card-header">
        <h3 class="card-title">New Sewerage Connection</h3>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="SewerageConnection" class="btn btn-outline-danger btn-lg" title="Add New User"><b><i class="fas fa-plus"></i> Add New </b> </a>
        </p>
        <table id="example1" class="table table-bordered table-striped">
            <thead style="background-color:mediumaquamarine">

                <tr>
                    <th>#</th>
                    <th>TTIN</th>
                    <th>Land Detail</th>
                    <th>Contact Address</th>
                    <th>Mobile No</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{int sl = 1; }

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @sl
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TTIN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlotNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MobileNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                       
                        <td style="text-align:center;">
                            @*<a asp-action="Details" asp-route-id="@item.WaterConnectionId" title="DETAILS"><i class="fas fa-eye"></i></a> |*@
                            <a asp-action="Edit" asp-route-id="@item.SewerageConnectionId" title="EDIT"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                    sl++;
                }
            </tbody>
        </table>
    </div>

</div>

<script src="~/plugins/jquery/jquery.min.js"></script>

<script>

    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
        });
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });


</script>

