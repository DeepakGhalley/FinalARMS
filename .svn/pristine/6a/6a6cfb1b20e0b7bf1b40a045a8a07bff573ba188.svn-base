@model List<CORE_BOL.HouseAllocationVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index"> Lease</a></li>
                    <li class="breadcrumb-item active">House Rent </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-check"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }

    <div class="card-header">
        <h3 class="card-title">House Details</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-outline-danger btn-lg" title="Add New User"><b><i class="fas fa-plus"></i> Add New </b> </a>
            <a asp-action="HouseRentRenewal" class="btn btn-outline-danger btn-lg" title="Add New User"><b><i class="fas fa-plus"></i> Extension </b> </a>
     
        </p>
        <hr />
        <table id="example1" class="table table-bordered table-striped">
            <thead style="background-color:mediumaquamarine">

                <tr>
                    <th>#</th>
                    <th>TTIN</th>
                    <th>House No</th>
                    <th>House Address</th>
                    
                    <th>Is Terminated</th>
                    <th>Remarks</th>
                    <th style="text-align:center;">Action</th>
                </tr>
            </thead>
            <tbody>
                @{int sl = 1; }

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @sl
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.ttin)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.HouseNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HouseAddress)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.IsTerminated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>



                    <td style="text-align:center;">
                        <a asp-action="Edit" asp-route-id="@item.HouseDetailId" title="EDIT"><i class="fas fa-edit"></i></a>
                        @*&nbsp;&nbsp; | &nbsp;&nbsp;<a asp-action="Details" asp-route-id="@item.StallDetailId" title="View"><i class="fas fa-eye"></i> </a> &nbsp;&nbsp;*@
                         | <a asp-area="HouseRent" asp-controller="HouseDetails" onclick="return validate(@item.HouseAllocationId)" asp-action="Terminate" asp-route-id="@item.HouseAllocationId" title="Terminate"><i class="fas fa-trash" style="color:red;"></i>&nbsp; Terminate</a>
                         | <a style="color: #007bff; cursor: pointer;" onclick="return displayHouseDetail('@item.HouseDetailId')" title="Add New House Allocation"><i class="fas fa-plus-circle"></i> House Allocation </a>
                      
                    </td>
                </tr>
                    sl++;
                }
            </tbody>
        </table>
    </div>
</div>
<div class="card card-info" id="housedetail" style="display: none;">
    <div class="card-header">
        <h3 class="card-title">House Details</h3>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <table id="" class="table table-bordered table-striped">
                <thead style="background-color:mediumaquamarine">
                    <tr>
                        <th>Sl</th>
                        <th>Name</th>
                        <th>Cid No</th>
                        <th>TTIN</th>
                        <th>House No</th>
                        <th>House Address</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody id="tblhousedetail">
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-header">
        <h3 class="card-title">Tax Payer</h3>
        <input type="hidden" id="hdnStallDetailId" />

    </div>
    <div class="card-body">

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">CID </label>
            <div class="col-sm-2">
                <input class="form-control" maxlength="11" placeholder="Search by CID" id="CIDinput" />
            </div>
            <label class="col-sm-1 col-form-label">TTIN </label>
            <div class="col-sm-2">
                <input class="form-control" placeholder="Search by TTIN" id="TTINinput" />
            </div>

            <div class="col-sm-2">
                <button type="button" class="btn btn-outline-success" onclick="return SearchTaxPayer();">Search</button>

            </div>
        </div>
    </div>
</div>
<div class="form-group row" id="search" style="display: none;">
    <table id="example1" class="table table-bordered table-striped">
        <thead>

            <tr>
                <th>Name</th>
                <th>CID</th>
                <th>TTIN</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody id="mybody">
        </tbody>
    </table>
</div>
<hr />

<div class="card card-info" id="houseallocation" style="display: none;">
    <div class="card-header">
        <h3 class="card-title">House Allocation Entry</h3>
        <input type="hidden" id="hdnHouseDetailId" />
        <input type="hidden" id="hdnTaxPayerId" />
        <input type="hidden" id="EndDate" />
        <input type="hidden" id="StartDate" />

    </div>
    <div class="card-body">

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Billing schedule <span style="font-weight: bold; color: red;">*</span></label>
            <div class="col-sm-4">
                <select class="form-control" id="idibillingschedule" style="width:100%;" value="0" disabled>
                    <option>Monthly</option>
                </select>
            </div>

            <label class="col-sm-2 col-form-label">Allocate Date <span style="font-weight: bold; color: red;">*</span></label>
            <div class="col-sm-4">
                <input class="form-control" id="iddallocatedate" placeholder="Enter Allocate Date" type="date" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Rental Amount <span style="font-weight: bold; color: red;">*</span></label>
            <div class="col-sm-4">
                <input class="form-control" id="idfrentalamount" placeholder="Enter Rental Amount" />
                <span class="text-danger" id="rentalamount"></span>
            </div>
            <label class="col-sm-2 col-form-label">Security Amount <span style="font-weight: bold; color: red;">*</span></label>
            <div class="col-sm-4">
                <input class="form-control" id="idfsecurityamount" placeholder="Enter Security Amount" />
                <span class="text-danger" id="rentalamount"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Start Date <span style="font-weight: bold; color: red;">*</span></label>
            <div class="col-sm-4">
                <input class="form-control" id="lblstart" placeholder="Enter Allocate Date" type="date" />
            </div>
            <label class="col-sm-2 col-form-label">End Date <span style="font-weight: bold; color: red;">*</span></label>
            <div class="col-sm-4">
                <input class="form-control" id="lblend" placeholder="Enter Allocate Date" type="date" />
            </div>
        </div>
        <div class="form-group row">

            <label class="col-sm-2 col-form-label">Remarks </label>
            <div class="col-sm-4">
                <textarea class="form-control" id="idsremarks" placeholder="Enter Remarks" rows="3"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <button type="button" class="btn btn-primary" id="SaveHouseAllocation">Save</button>
                <button type="reset" id="btnCancel" class="btn btn-warning">Cancel</button>
            </div>
        </div>
    </div>
    </div>

<script src="~/plugins/jquery/jquery.min.js"></script>

<script>

    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
        });
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
    function validate(id) {
        //var id = $('#StallAllocationId').val();
        //alert(id);
        if (id == 0) {
            swal("Please Add House Allocation");
            return false;
        }

        if (id > 0) {
            return true;
        }
    }

    function displayHouseDetail(HouseDetailId) {
        $('#hdnHouseDetailId').val(HouseDetailId);

                $('#housedetail').toggle(1000);
            $('#taxpayer').toggle(1000);
            $('#houseallocation').hide(1000);


                $('html,body').animate({
                    scrollTop: $("#housedetail").offset().top
                }, 'slow');


            $.ajax({
                type: "GET",
                url: '@Url.Action("GetHouseDetails", "HouseDetails")',
                data: {
                    id: parseInt(HouseDetailId)
                },
                success: function (data) {
                    var EndDate = data[0].endDate;
                    var StartDate = data[0].startDate;
                    $('#EndDate').val(EndDate);
                    $('#StartDate').val(StartDate);

                    $('#housedetail').show(1000);
                    $('#tblhousedetail').empty();
                    if (data.length > 0) {
                        $.each(data, function (key, value) {
                            const d = new Date(value.startDate);
                            const sDate = ("0" + d.getDate()).slice(-2) + '/' + ("0" + (d.getMonth() + 1)).slice(-2) + '/' + d.getFullYear()

                            const e = new Date(value.endDate);
                            const eDate = ("0" + e.getDate()).slice(-2) + '/' + ("0" + (e.getMonth() + 1)).slice(-2) + '/' + e.getFullYear()

                            $('#tblhousedetail').append(
                                '<tr>'
                                + '<td>' + (key + 1) + '</td>'
                                + '<td>' + value.name + '</td>'
                                + '<td>' + value.cid + '</td>'
                                + '<td>' + value.ttin + '</td>'
                                + '<td>' + value.houseNo + '</td>'
                                + '<td>' + value.houseAddress + '</td>'
                                + '<td>' + sDate + '</td>'
                                + '<td>' + eDate + '</td>'
                                + '</tr>');
                        });
                    }
                    else {
                        $('#tblhousedetail').append(
                            '<tr><td colspan="3" style="color: red;">No record found!</td></tr>');
                    }
                    },
                    error: function () {
                        alert('error');
                    }

                });
            }
                //Display Tax Prayer Profile
        function SearchTaxPayer() {
            $('#CIDinput').insertAfter(function () {
                var Cid = ($('#CIDinput').val());
                var Ttin = ($('#TTINinput').val());
                if (Cid == Cid || Ttin == Ttin) {
                    $('#search').show(1000);
                    $('#housedetail').show(1000);
                    $('#tblhousedetail').show(1000);
                    $('#houseallocation').hide(1000);

                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("GetTaxPayer", "HouseDetails")',
                        data: {
                            cid: Cid,
                            ttin: Ttin
                        },
                        success: function (data) {
                            $('#mybody').empty();
                            if (data.length > 0) {


                                $.each(data, function (key, value) {
                                    $('#search').show(1000);
                                    $('#mybody').append(
                                        '<tr>'
                                        + '<td>' + value.fullName + '</td>'
                                        + '<td>' + value.cid + '</td>'
                                        + '<td>' + value.ttin + '</td>'
                                        + '<td><b><a style="cursor: pointer; color: forestgreen;" onclick="return displayHouseAllocation(' + value.houseDetailId + ');">View</a></b></td>'
                                        + '</tr>');
                                });
                                $('#img').hide();
                                $('#hdnTaxPayerId').val(data[0].taxPayerId);
                            }
                            else {
                                $('#img').hide();

                                $('#mybody').append(
                                    '<tr><td colspan="7" style="color: red;">No record found!</td></tr>');
                            }

                        },
                        error: function () {
                            alert('error');
                        }

                    });
                }
                else {
                    //('#search').show(1000);
                    alert('error occured!!');
                   
                }
            });
    } 

   
        //House Allocation Entry
    function displayHouseAllocation(houseDetailId) {
        $('#houseallocation').toggle(1000);
        $('html,body').animate({
            scrollTop: $("#houseallocation").offset().top
        }, 'slow');

    }


        $("#SaveHouseAllocation").click(function () {
            if ($('#lblstart').val() >= $('#lblend').val()) {
                swal('Invalid End Date');

                return false;
            }
            if ($('#EndDate').val() > $('#lblend').val()) {
                swal('House Already Allocated for this Date!');
                return false;
            }
            if ($('#EndDate').val() > $('#lblstart').val()) {
                swal('House Already Allocated for this Date!');
                return false;
            } 
        var myarray = [];
        var HouseAllocationVM = {};

            HouseAllocationVM.HouseDetailId = parseInt($("#hdnHouseDetailId").val());
            HouseAllocationVM.TaxPayerId = parseInt($("#hdnTaxPayerId").val());
            //HouseAllocationVM.BillingScheduleId = parseInt($("#idibillingschedule").val());
            // StallAllocationVM.RateId = parseInt($("#rateid").val());
            HouseAllocationVM.RentalAmount = parseFloat($("#idfrentalamount").val());
            HouseAllocationVM.SecurityAmount = parseFloat($("#idfsecurityamount").val());
            HouseAllocationVM.AllocationDate = $("#iddallocatedate").val();
            HouseAllocationVM.SStartDate = $("#lblstart").val();
            HouseAllocationVM.EEndDate = $("#lblend").val();
            //StallAllocationVM.TerminateDate = parseInt($("#terminateid").val());
            //StallAllocationVM.TerminateReason = $("#reasonid").val();
            HouseAllocationVM.Remarks = $("#idsremarks").val();
            //StallAllocationVM.HasSecurityDepHouseDetailIdouseDetailIdouseDetailIdouseDetailIdsit = $("#hasid").val();


            myarray.push(HouseAllocationVM);

        var json_data = JSON.stringify(myarray);
            console.log(json_data);

        $('#img').show();

        $.ajax({
            type: "POST",
            url: '@Url.Action("CreateHouseAllocation", "HouseDetails")',
            data: json_data,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                //$('#tblhouseallocation').show(1000);
                //$('#houseallocationdetail').show(1000);

               // $('#stallallocation').hide(1000);
                //$('#stalldetail').hide(1000);
                //$('#tblstalldetail').hide(1000);
                $('#search').hide(1000);
                $('#mybody').hide(1000);

                $('#img').hide();
                swal(response);
                setInterval('location.reload()', 2000);
            },
            failure: function (response) {
                $('#img').hide();
                swal("Creation Failed");
            },
            error: function (response) {
                $('#img').hide();
                swal("Error while inserting");
            }

        });
        });
       

    //Validation for Rental and Security Amount
    $(function () {
        $("#idfrentalamount").keypress(function (e) {
            var keyCode = e.keyCode || e.which;
            $("#rentalamount").html("");
            var regex = /^[0-9]+$/;
            var isValid = regex.test(String.fromCharCode(keyCode));
            if (!isValid) {
                $("#rentalamount").html("Only Numbers allowed.");
            }
            return isValid;
        });
        $("#idfsecurityamount").keypress(function (e) {
            var keyCode = e.keyCode || e.which;
            $("#securityamount").html("");
            var regex = /^[0-9]+$/;
            var isValid = regex.test(String.fromCharCode(keyCode));
            if (!isValid) {
                $("#securityamount").html("Only Numbers allowed.");
            }
            return isValid;
        });
    });
    $("#btnCancel").click(function () {
        $('#search').hide(1000);
        $('#housedetail').hide(1000);
        $('#tblhousedetail').hide(1000);
        $('#houseallocation').hide(1000);
    });
        
</script>

