    $(function () {
        $("#txt").keypress(function (e) {
            var keyCode = e.keyCode || e.which;
            $("#phone").html("");
            var regex = /^[0-9]+$/;
            var isValid = regex.test(String.fromCharCode(keyCode));
            if (!isValid) {
                $("#phone").html("Only Numbers allowed.");
            }
