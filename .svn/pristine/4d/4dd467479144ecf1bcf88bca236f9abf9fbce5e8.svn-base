@using CORE_BOL
@model RateVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Tax Master</a></li>
                    <li class="breadcrumb-item active">Update Rate</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-info">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            <p>@TempData["msg"]</p>
        </div>
    }
    <div class="card-header">
        <h3 class="card-title">Update Rate</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Edit" method="post">
        @*data-ajax="true" data-ajax-method="post">*@
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" title="Go Back"><i class="fas fa-backward"></i> Go Back</a>
            </p>
            <input type="hidden" asp-for="RateId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Tax" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <select asp-for="TaxId" id="TaxId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.TaxId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="TaxId" id="errorTaxId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Slab" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <select asp-for="SlabId" id="SlabId" class="form-control select2bs4" style="width: 100%;" asp-items="@(new SelectList (@ViewBag.SlabId,"Value","Text")) " value="0"></select>
                    <span asp-validation-for="SlabId" id="errorSlabId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Rate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="Rate" class="form-control" placeholder="Rate" required/>
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="MinimumRate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="MinimumRate" class="form-control" placeholder="Minimum Rate" required/>
                    <span asp-validation-for="MinimumRate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EffectiveDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="EffectiveDate" type="date" class="form-control" placeholder="Effective Date" required/>
                    <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                <div class="custom-control custom-checkbox">
                    &nbsp;&nbsp; <input class="custom-control-input" type="checkbox" asp-for="IsActive" checked>
                    <label for="IsActive" class="custom-control-label">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" onclick="return saveme();">Save</button>
                    <a type="button" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
        <!-- /.card-body -->

    </form>
</div>

<script>
    //Validation
    function saveme() {
        //tax
        if ($('#TaxId option:selected').val() == 0) {
            $('#errorTaxId').html('Please Select a Value');
            $('#TaxId').focus();
            return false;
        }
        else {
            $('#errorTaxId').html('');
        }
        //slap
        if ($('#SlabId option:selected').val() == 0) {
            $('#errorSlabId').html('Please Select a Value');
            $('#SlabId').focus();
            return false;
        }
        else {
            $('#errorSlabId').html('');
        }

    }
</script>

