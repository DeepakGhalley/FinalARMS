@{
    ViewData["Title"] = "WaterAccountWiseReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" method="get">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="WaterAccountWiseReport">Report</a></li>
                        <li class="breadcrumb-item active">Water Account Wise Report</li>
                    </ol>
                </div>
            </div>
        </div>
</div>
    
<div class="card card-info">
  @if (TempData["msg"] != null)
   {
     <div class="alert alert-success alert-dismissible">
     <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
     <h5><i class="icon fas fa-check"></i> Alert!</h5>
     <p>@TempData["msg"]</p>
     </div>
   }

<div class="card-header">
     <h3 class="card-title">Water Account Wise Report</h3>
</div>
     <div class="card-body">
     <hr />
        <div class="form-group row">
            <label class="col-sm-1 col-form-label">From Date</label>
            <div class="col-sm-3">
                 <input id="fromdate" type="date" class="form-control col-6" />
                 <span id="FromDatecheck" class="text-danger"></span>
            </div>
            <label class="col-sm-1 col-form-label">To Date</label>
            <div class="col-sm-3">
                  <input id="todate" type="date" class="form-control col-6" />
                  <span id="ToDatecheck" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            
            <label class="col-sm-1 col-form-label"></label>
            <div class="col-sm-3">
            <input type="button" value="Search" class="btn btn-block btn-primary " onclick="return PrintReport();" />
            </div>
        </div>
     </div>
</div>
@*<input type="hidden" id="hdnPaymentMade" value="0" />*@
</form>


<script>

function PrintReport() {
    if ($('fromdate').val() == "" && $('#todate').val() == "")
    {
      swal("Fields not selected!");
      $("#FromDatecheck").focus();
      $("#ToDatecheck").focus();
      return false;
    }
        var today = new Date($("#fromdate").val());
        var date = today.getFullYear() + '' + ("0" + (today.getMonth() + 1)).slice(-2) + '' + ("0" + today.getDate()).slice(-2)
        var fdate = date;

        var today1 = new Date($("#todate").val());
        var date1 = today1.getFullYear() + '' + ("0" + (today1.getMonth() + 1)).slice(-2) + '' + ("0" + today1.getDate()).slice(-2)
        var tdate = date1;

        
               $.ajax({
                   type: "GET",
                   url: '@Url.Action("PrintWaterAccountWiseReport", "Report2s")',
                   data: {
                       FromDate: fdate,
                       ToDate: tdate    
                   },
                   success: function (data) {
                       if (data.length > 0) {
                           window.open("@Url.RouteUrl(new
                                 { Area ="Reports",Controller = "Report2s", Action = "PrintWaterAccountWiseReport" })/?FromDate=" + fdate + "&ToDate=" + tdate, '_blank');
                       }
                       $('#img').hide();
                   },
                   error: function () {
                       alert('error');
                       $('#img').hide();
                   }
               });
   }

</script>